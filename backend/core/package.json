    "db:migrate": "bun run src/db/migrate.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.9",
    "@ai-sdk/deepseek": "^0.2.9",
    "@ai-sdk/google": "^1.2.10",
    "@ai-sdk/groq": "^1.2.7",
    "@ai-sdk/mistral": "^1.2.6",
    "@ai-sdk/openai": "^1.3.10",
    "@hono/zod-validator": "^0.4.3",
    "ai": "^4.3.4",
    "drizzle-orm": "^0.43.0",
    "hono": "4.7.6",
    "ollama-ai-provider": "^1.2.0",
    "openai": "^4.93.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.0"
  }
}
