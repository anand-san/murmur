{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Murmur",
  "version": "0.1.0",
  "identifier": "com.murmur.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Murmur",
        "url": "/ai-interaction",
        "width": 450,
        "height": 550,
        "decorations": true,
        "browserExtensionsEnabled": false,
        "trafficLightPosition": {
          "x": 10,
          "y": 10
        },
        "visibleOnAllWorkspaces": true,
        "visible": true,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "alwaysOnTop": true,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "windowEffects": {
          "effects": ["blur", "acrylic"],
          "radius": 60,
          "color": "#000000"
        }
      },
      {
        "label": "settings",
        "title": "Settings",
        "url": "settings.html",
        "width": 700,
        "height": 550,
        "decorations": true,
        "visible": false,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "transparent": false,
        "hiddenTitle": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data: media: http://localhost:3000; connect-src 'self' http://localhost:3000; script-src 'self' 'unsafe-eval';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["assets"]
  }
}
